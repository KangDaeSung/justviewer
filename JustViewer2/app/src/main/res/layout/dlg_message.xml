<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingBottom="60dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/dlgMsgMessageTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="13dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="18.5dp"
                    android:textStyle="bold"
                    tools:text="정말 삭제하시겠습니까?" />

                <LinearLayout
                    android:id="@+id/dlgMsgBtnLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rect_round_efefef_20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="22dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/dlgMsgIcon01"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dlgMsgBtn01"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="1.7dp"
                        android:textColor="#333333"
                        android:textSize="17dp"
                        tools:text="옵션1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dlgMsgBtnLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rect_round_efefef_20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="22dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/dlgMsgIcon02"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dlgMsgBtn02"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="18dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="1.7dp"
                        android:textColor="#333333"
                        android:textSize="17dp"
                        tools:text="옵션2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dlgMsgBtnLayout03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rect_round_efefef_20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="22dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/dlgMsgIcon03"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:id="@+id/dlgMsgBtn03"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="1.7dp"
                        android:textColor="#333333"
                        android:textSize="17dp"
                        tools:text="옵션3" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dlgImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="2dp"
                android:src="@drawable/img_alert" />

            <TextView
                android:id="@+id/dlgMsgTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#1b1b1b"
                android:textSize="16.5dp"
                tools:text="화면 삭제" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>