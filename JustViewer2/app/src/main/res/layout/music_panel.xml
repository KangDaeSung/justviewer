<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/panel_open"
        android:layout_width="86dp"
        android:layout_height="35.5dp"
        android:background="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false">

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panel_title"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:shadowColor="@android:color/white"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/panel_artist"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:shadowColor="@android:color/white"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@android:color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <Button
            android:id="@+id/panel_favo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="28dp"
            android:background="@drawable/h_star" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:soundEffectsEnabled="false">

        <TextView
            android:id="@+id/panel_current_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <SeekBar
            android:id="@+id/panel_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:maxHeight="18dp"
            android:minHeight="18dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:progressDrawable="@drawable/drawable_seekbar"
            android:thumb="@drawable/bar_point"
            android:thumbOffset="6dp" />

        <TextView
            android:id="@+id/panel_duration_time"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:soundEffectsEnabled="false">

        <Button
            android:id="@+id/panel_shuffle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_shuffle_on" />

        <Button
            android:id="@+id/panel_prev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_prev" />

        <Button
            android:id="@+id/panel_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_play" />

        <Button
            android:id="@+id/panel_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_next" />

        <Button
            android:id="@+id/panel_stop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_stop" />

        <Button
            android:id="@+id/panel_del"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/h_media_delete" />
    </LinearLayout>
</merge>